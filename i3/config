set $mod Mod4
set $alt Mod1
font pango:Fira Code: 12px
# gaps inner 0



# startup things
exec --no-startup-id nm-applet
exec --no-startup-id setxkbmap us
exec --no-startup-id amixer set Master unmute
exec --no-startup-id exec ~/dotfiles/scripts/startup.sh
exec --no-startup-id exec ~/dotfiles/scripts/sw.py
# exec --no-startup-id exec ~/dotfiles/scripts/wacom-tablet.sh

exec_always --no-startup-id exec betterlockscreen -u ~/dotfiles/wallpapers/nord.png
exec_always --no-startup-id exec autotiling
exec_always --no-startup-id feh --bg-fill ~/dotfiles/wallpapers/nord.png
exec_always --no-startup-id sxhkd
# exec_always --no-startup-id ~/.config/polybar/launch.sh

# window things
default_border pixel 1
workspace_layout tabbed
# workspace_layout default
floating_modifier $mod

#                       border  backgr. text    indicator
client.focused          #FE8019 #FE8019 #000000 #FE8019 
client.background       #000000

bindsym Mod4+Mod1+q [class=".*"] kill

# i3 keybindings
bindsym $mod+f fullscreen toggle
bindsym $mod+q kill
bindsym $mod+Shift+f floating toggle
bindsym $mod+Shift+l restart

# system movement
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left  move left 1415
bindsym $mod+Shift+Right  move right 1415
bindsym $mod+Shift+Up  move up 795
bindsym $mod+Shift+Down  move down 795
bindsym $mod+m fullscreen disable, floating enable, resize set 504 285, sticky enable, move window to position 1416 795

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
