
(evil-define-key 'normal 'global
  (kbd "C-s") 'save-buffer
  (kbd "C-w") 'delete-window
  (kbd ":") 'execute-extended-command)

;; (general-define-key
;;   (kbd "SPC") nil
;;  (kbd "<escape>") 'keyboard-escape-quit)

