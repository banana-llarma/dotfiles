(general-create-definer leader
  :prefix "SPC")

(leader
  :state 'normal
  (kbd "c d") 'cd
  (kbd "f f") 'find-file
  (kbd "h v") 'describe-variable
  (kbd "h k") 'describe-key
  (kbd "h m") 'describe-mode
  (kbd "r c") 'eval-buffer
  (kbd "r f") 'counsel-recentf)


(general-define-key
 (kbd "M-a") 'cd)
