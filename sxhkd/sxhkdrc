
XF86AudioRaiseVolume
  amixer set Master 5%+
XF86AudioLowerVolume
  amixer set Master 5%-

super + a
  betterlockscreen -l

super + c
  chromium

super + d
  rofi -show run

super + t
  alacritty

super + y
  firefox

alt + super + control + shift + x
    xdotool getactivewindow -- key h e l l o space w o r l d

super + shift + c
  google-chrome-unstable

super + shift + t
  kitty -e tmux

super + shift + q
  betterlockscreen -s

super + shift + x
  kill -9 -1

super + shift + m
  i3-msg '[class=".*"] kill'; sleep 1; sudo systemctl reboot --firmware-setup



super + shift + r
  i3-msg '[class=".*"] kill'; reboot

alt + super + control + shift + c
  amixer sset Master -5db
alt + super + control + shift + r
  amixer sset Master +5db


alt + super + control + shift + a
  notify-send "started Entertainment"; toggl start -o Entertainment 

alt + super + control + shift + s
  notify-send "stoped timer"; toggl stop

alt + super + control + shift + f
   notify-send "started Focus"; toggl start -o Focus


